<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.seppiko.wagashi.core.mappers.UserMapper">

  <resultMap id="base_result" type="org.seppiko.wagashi.core.models.User">
    <id column="id" property="id" />
    <result column="username" property="username" />
    <result column="password" property="password" />
  </resultMap>

  <sql id="base_table">
    user
  </sql>

  <select id="queryByUsername" parameterType="java.lang.String" resultMap="base_result">
    SELECT id, username, password
    FROM <include refid="base_table" />
    WHERE username = #{username}
  </select>

</mapper>
