<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.seppiko.wagashi.core.mappers.RoleMapper">

  <resultMap id="base_result" type="org.seppiko.wagashi.core.models.Role">
    <id column="id" property="id" />
    <result column="name" property="name" />
  </resultMap>

  <sql id="base_table">
    role
  </sql>

  <sql id="rel_table">
    user_role
  </sql>

  <select id="queryByUsername" parameterType="java.lang.Long" resultMap="base_result">
    SELECT r.id as id, r.name as name
    FROM <include refid="base_table" /> r, <include refid="rel_table" /> ur
    WHERE r.id = ur.rid
    AND ur.uid = #{uid}
  </select>

</mapper>